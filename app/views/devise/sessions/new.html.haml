.sign_in
  .header
    .single-header
      =link_to root_path do
        =  image_tag 'logo.png', size: "185x49"
      
  .main      
    .login-panel
      .login-no-account
        .text
          アカウントをお持ちでない方はこちら
        .new
          =link_to new_user_registration_path do
            新規会員登録
          
      .login-form-inner
        .facebook-login
          = link_to "https://www.facebook.com/", class: "facebook-login__btn" do
            = icon('fab', 'facebook-square')
            Facebookでログイン
        .Google-login
          = link_to "https://www.google.com/?hl=ja", class: "Google-login__btn" do
            = icon('fab', 'google')
            Googleでログイン


      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login-form-inner
          .field
            -# = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: 'form-group'
          .field
            -# = f.label :password
            %br/
            = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード' , class: 'form-group'
          - if devise_mapping.rememberable?
            -# .field
            -#   = f.check_box :remember_me
            -#   = f.label :私はロボットではありません
          .actions
            = f.submit "ログイン",class:'login'
            = render "devise/shared/links"


  .footer
    .single-footer
      .clearfix
      %ul
        %li
        = link_to "＃", class: "privacy" do
          プライバシーポリシー
        %li
        = link_to "＃", class: "terms" do
          メルカリ利用規約
        %li
        = link_to "＃", class: "notation" do
          特定商取引に関する表記
      .single-footer-logo
      =link_to root_path do
        =  image_tag 'logo.png', size: "120x50"
      .last
      =link_to root_path do
        © furima, Inc.
      

